@model List<StudentListModel>


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Öğrenci Listesi</h5>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#basicModal">Öğrenci Ekle</button>
                    </div>
                    

                    <!-- Table with stripped rows -->
                    <table class="table datatable table-hover table-bordered text-center">
                        <thead class="d-flex justify-content-center">
                            <tr>
                                <th>
                                    <b>İ</b>sim
                                </th>
                                <th>Soyisim</th>
                                <th>Cinsiyet</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Doğum Tarihi</th>
                                <th>Seçenekler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.FirstName</td>
                                    <td>@student.LastName</td>
                                    <td>@student.Gender</td>
                                    <td>@student.DateOfBirth.ToShortDateString()</td>
                                    <td>
                                        <a asp-controller="Student" asp-action="Update" class="btn btn-warning">Düzenle</a>
                                        <a asp-controller="Student" asp-action="Delete" class="btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                            
                            
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>

<partial name="~/Areas/Admin/Views/Student/Create.cshtml" model="new StudentCreateModel()"></partial>








