@model List<StudentListModel>



<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Datatables</h5>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#basicModal" >Öğrenci Ekle</button>
                    </div>

                    


                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>

                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>Gender</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Doğum Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Gender</td>
                                    <td>@item.DateOfBirth</td>
                                    <td>
                                        <a asp-action="Update" class="btn btn-warning">Güncelle</a>
                                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>


<partial name="~/Areas/Admin/Views/Student/Create.cshtml" model="new StudentCreateModel()"></partial>



